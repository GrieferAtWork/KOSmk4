assert optimizeForIfdef("!defined(FOO)") == "#ifndef FOO\n";
assert optimizeForEndif("FOO") == "#endif /* FOO */\n";
assert optimizeForEndif("defined(FOO)") == "#endif /* FOO */\n";
assert optimizeForEndif("!defined(FOO)") == "#endif /* !FOO */\n";

