/* (>) Standard: ISO C++98 (ISO/IEC 14882:1998) */
/* (#) Portability: diet libc (/include/clocale) */
/* (#) Portability: libstdc++ (/include/clocale) */
/*!replace_with_include <locale.h>*/
#ifndef _CXX_CLOCALE
#define _CXX_CLOCALE 1
#ifndef _LOCALE_H
#ifdef __CXX_SYSTEM_HEADER
#include "locale.h"
#else /* __CXX_SYSTEM_HEADER */
#include "features.h"
#ifndef __USE_BROKEN_CCOMPAT
#define __CXX_SYSTEM_HEADER 1
#endif /* !__USE_BROKEN_CCOMPAT */
#include "locale.h"
#undef __CXX_SYSTEM_HEADER
#endif /* !__CXX_SYSTEM_HEADER */
#endif /* !_LOCALE_H */
#endif /* !_CXX_CLOCALE */
